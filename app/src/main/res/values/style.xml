<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--myButtonStyle-->
    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button"> </style>

    <!--myFloatingActionButtonStyle-->
    <style name="myFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/red_500</item>
        <item name="tint">@color/white</item>
    </style>

    <!--myBottomAppBarStyle-->
    <style name="myBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/color_blue_nasa_icon</item>
    </style>

    <!--myProgressBarStyle-->
    <style name="myProgressBarStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/color_blue_nasa_icon</item>
    </style>

    <!--myCardViewStyle-->
    <style name="myCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/myMediumComponentStyle</item>
    </style>

    <!--mySnackBarStyle-->
    <style name="mySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/black</item>
    </style>

    <!--mySnackBarTextViewStyle-->
    <style name="mySnackBarTextViewStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_yellow</item>
        <item name="android:gravity">start|center</item>
    </style>

    <!--myChipsStyleActionBaseStyle-->
    <style name="myChipsStyleActionBaseStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="rippleColor">@color/color_blue_nasa_icon_transparent</item>
    </style>

    <!--myFontFamilyStyle-->
    <style name="myFontFamilyStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/astro_space</item>
    </style>

    <!--myTabStyleBlue-->
    <style name="myTabStyleBlue" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/color_blue_nasa_icon</item>
    </style>

    <!--myTabStyleRed-->
    <style name="myTabStyleRed" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/red_500</item>
    </style>

    <!--mySmallComponentStyle-->
    <style name="mySmallComponentStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">5dp</item>
    </style>

    <!--myMediumComponentStyle-->
    <style name="myMediumComponentStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cardElevation">20dp</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!--MyNavigationStyleRED-->
    <style name="myNavigationStyleRed" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">10dp</item>
        <item name="itemTextColor">@color/red_900</item>
        <item name="itemIconTint">@color/red_600</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!--MyNavigationStyleBLUE-->
    <style name="myNavigationStyleBlue" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">10dp</item>
        <item name="itemTextColor">@color/color_blue_nasa_icon</item>
        <item name="itemIconTint">@color/color_blue</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>